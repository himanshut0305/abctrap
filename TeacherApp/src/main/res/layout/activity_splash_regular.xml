<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/splash_activity_layout"
    android:background="@drawable/gradient_background_red"
    tools:context=".SplashActivity">

    <com.qedplus.particlesTeacher.extras.StarAnimationView
        android:id="@+id/animated_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|center_horizontal"
        android:layout_alignParentTop="true" />

    <android.support.constraint.ConstraintLayout
        android:background="#77000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/school_splash_logo_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:onClick="onSchoolLogoClick"
            android:src="@drawable/ic_logo"/>
    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>