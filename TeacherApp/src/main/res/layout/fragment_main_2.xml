<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:orientation="vertical"
    android:background="#eceff1"
    tools:context=".MainActivity$PlaceholderFragment">

    <LinearLayout
        android:id="@+id/fragment_main_2_layout"
        android:orientation="vertical"
        android:paddingBottom="65dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:elevation="3dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <TextView
                    android:textSize="20dp"
                    app:fontFamily="@font/open_sans"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report"/>

                <TextView
                    android:textSize="12dp"
                    app:fontFamily="@font/open_sans"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="12dp"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:text="@string/performance_card_string"/>

                <TextView
                    android:id="@+id/proficiency_number_label"
                    android:textSize="48sp"
                    android:textColor="@color/white"
                    app:fontFamily="@font/din"
                    app:layout_constraintRight_toRightOf="parent"
                    android:gravity="bottom|center"
                    android:layout_width="120dp"
                    android:layout_height="72dp"
                    android:background="@color/darkred"
                    android:text="6.8"/>

                <TextView
                    android:id="@+id/proficiency_number_text"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    app:fontFamily="@font/open_sans"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:gravity="center"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:paddingBottom="10dp"
                    android:background="@color/darkred"
                    android:text="Proficiency\nRating"/>

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:elevation="3dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/report_card_layout"
                android:orientation="vertical"
                android:background="@drawable/gradient_red_on_red"
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart_analysis"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" />

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="5dp"
            android:layout_height="120dp">

            <TextView
                android:id="@+id/t1"
                android:textSize="48sp"
                android:textColor="@color/grey"
                app:fontFamily="@font/din"
                android:gravity="bottom|center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/t2"
                android:layout_width="100dp"
                android:layout_height="72dp"
                android:text="92"/>

            <TextView
                android:id="@+id/t2"
                android:textSize="48sp"
                android:textColor="@color/grey"
                app:fontFamily="@font/din"
                android:gravity="bottom|center"
                app:layout_constraintLeft_toRightOf="@+id/t1"
                app:layout_constraintRight_toLeftOf="@+id/t3"
                android:layout_width="100dp"
                android:layout_height="72dp"
                android:text="7"/>

            <TextView
                android:id="@+id/t3"
                android:textSize="48sp"
                android:textColor="@color/grey"
                app:fontFamily="@font/din"
                android:gravity="bottom|center"
                app:layout_constraintLeft_toRightOf="@+id/t2"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="100dp"
                android:layout_height="72dp"
                android:text="64"/>

            <TextView
                android:id="@+id/h1"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/grey"
                app:fontFamily="@font/open_sans"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/t2"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:text="Minutes of\nRevision"/>

            <TextView
                android:id="@+id/h2"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/grey"
                app:fontFamily="@font/open_sans"
                android:gravity="center"
                app:layout_constraintLeft_toRightOf="@+id/t1"
                app:layout_constraintRight_toLeftOf="@+id/t3"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:text="Revisions\nPending"/>

            <TextView
                android:id="@+id/h3"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/grey"
                app:fontFamily="@font/open_sans"
                android:gravity="center"
                app:layout_constraintLeft_toRightOf="@+id/t2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:text="Minutes of\nPractice"/>

            <View
                android:id="@+id/v1"
                android:background="#ccc"
                android:layout_marginTop="30dp"
                android:layout_width="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/v2"
                android:layout_height="72dp" />

            <View
                android:id="@+id/v2"
                android:background="#ccc"
                android:layout_marginTop="30dp"
                android:layout_width="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/v1"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="72dp" />

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</ScrollView>