<resources>
    <style name="BlackAndWhiteAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
    </style>

    <style name="WhiteAndRedAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/darkred</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="RedOnRedAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/darkred</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="WhiteAndOrangeAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/darkorange</item>
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="OrangeOnOrangeAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/darkorange</item>
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="WhiteAndGreenAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/darkgreen</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="GreenOnGreenAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/darkgreen</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="WhiteAndBlueAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/darkblue</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="BlueOnBlueAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/darkblue</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="WhiteAndIndigoAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/darkindigo</item>
        <item name="colorAccent">@color/indigo</item>
    </style>

    <style name="IndigoOnIndigoAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/indigo</item>
        <item name="colorPrimaryDark">@color/darkindigo</item>
        <item name="colorAccent">@color/indigo</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light"></style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="BlackAndWhiteAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="BlackAndWhiteAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PrimaryFlatButton" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">
            @style/Widget.AppCompat.Button.Borderless.Colored
        </item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="BlackOnRedAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/darkred</item>
        <item name="colorPrimaryDark">@color/soot</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="BlackOnGreenAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/darkgreen</item>
        <item name="colorPrimaryDark">@color/soot</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="BlackOnBlueAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/darkblue</item>
        <item name="colorPrimaryDark">@color/soot</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="BlackOnIndigoAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/darkindigo</item>
        <item name="colorPrimaryDark">@color/soot</item>
        <item name="colorAccent">@color/indigo</item>
    </style>

    <style name="myDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
