<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:fontFamily="@font/open_sans"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="As per our analysis;"/>

    <TextView
        android:fontFamily="@font/open_sans"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="You are better than the average in class but still there is a room for improvement."/>

    <TextView
        android:fontFamily="@font/open_sans"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Conceptually, you are good, but need to solve more numerical questions."/>

    <TextView
        android:fontFamily="@font/open_sans"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Recommended to revise chapters again"/>
</LinearLayout>