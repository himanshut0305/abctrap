<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/toc_chapter_heading_frame_layout">

    <Button
        android:id="@+id/toc_chapter_heading_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:elevation="2dp"
        android:background="@drawable/toc_chapter_button_icon" />

    <TextView
        android:id="@+id/toc_chapter_heading_name_text_view"
        android:text="Chapter Name Longer Than Usual"
        android:textColor="#333"
        android:textSize="20sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_gravity="start"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/toc_heading_path"
        android:layout_gravity="start"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="40dp"
        android:background="#EF9A9A"
        android:layout_width="2dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/toc_chapter_heading_number_text_view"
        android:text="Chapter Number"
        android:textSize="15dp"
        android:layout_gravity="start"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</FrameLayout>