<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:background="@drawable/border_grey_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/announcement_heading"
        android:text="Dr. Travis Bickel"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/announcement_date"
        android:layout_gravity="end"
        android:text="Dec 12"
        android:textSize="12sp"
        android:textStyle="bold"
        android:fontFamily="@font/open_sans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/announcement_text"
        android:text="Lorem ipsum dolor sit amet, omnis ki saepe vit debitis eu vix. Omnis ki saepe vit debitis eu vix."
        android:layout_marginTop="24dp"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</FrameLayout>
