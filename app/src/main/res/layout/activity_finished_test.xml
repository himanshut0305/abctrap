<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinishedTestActivity">

    <android.support.design.widget.CoordinatorLayout
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/practice_completed_text_view"
            android:textSize="24dp"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_gravity="top"
            android:textStyle="bold"
            android:text="Practice Completed!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="60dp">
            <TextView
                android:id="@+id/score_text_view"
                android:layout_weight="1"
                android:fontFamily="@font/din"
                android:textAlignment="center"
                android:textSize="60sp"
                android:textColor="@color/grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3/5"/>

            <TextView
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Answered Correctly"/>
        </LinearLayout>

        <Button
            android:id="@+id/five_more_button"
            android:onClick="onFiveMoreClick"
            android:layout_gravity="bottom"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="60dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/custom_button_grey"
            android:text="5 more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:onClick="onFinishClick"
            android:layout_gravity="bottom"
            android:layout_marginTop="24dp"
            android:textColor="#fff"
            android:background="@drawable/custom_button"
            android:text="Continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.CoordinatorLayout>
</android.support.constraint.ConstraintLayout>